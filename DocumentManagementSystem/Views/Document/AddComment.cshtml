@model CommentViewModel

@{
    ViewBag.Title = "Add Comment";
}

<div class="col-sm-5 card p-3">
    <h5 class="text-primary">New Comment</h5>
    <form method="post" class="mt-2">
        <div class="form-group" hidden >
            <input asp-for="DocumentId" class="col-form-label" />
        </div>
        <div class="form-group">
            <label asp-for="UserComment" class="col-form-label"></label>
            <input asp-for="UserComment" class="form-control" />
            <span asp-validation-for="UserComment" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="">
                <button type="submit" class="btn btn-primary btn-sm">Post</button>
                <a asp-action="documents" class="btn btn-warning btn-sm">Cancel</a>
            </div>
        </div>
    </form>
</div>