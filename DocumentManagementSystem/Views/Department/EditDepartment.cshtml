@model DepartmentViewModel

@{
    ViewBag.Title = "Edit Department";
}

<div class="card">
    <h5>Edit Department</h5>
    <form method="post" class="mt-2">
        <div class="form-group row" hidden>
            <label asp-for="DepartmentId" class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="DepartmentId" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Name" class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DateCreated" class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="SubmittedBy" class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="SubmittedBy" disabled class="form-control" />
                <span asp-validation-for="SubmittedBy" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Status" class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Status" class="form-check-input" aria-describedby="statushelp" />
                <small id="statushelp" class="form-text text-muted">Specify if department is active(Checked) or not(Uncheck).</small>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary btn-sm">Save</button>
                <a asp-action="index" class="btn btn-warning btn-sm">Cancel</a>
            </div>
        </div>
    </form>
</div>