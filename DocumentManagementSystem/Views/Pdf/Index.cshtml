@model PdfViewModel

@{
    ViewBag.Title = "Pdf Document";
    @*<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>*@
    <script src="https://cdn.tiny.cloud/1/9ay26f6x58cg2wfc8o0uo6wcxnboxq1xvpg53lbgid351g08/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: '#mytextarea'
        });
    </script>
}

<div class="card p-3">
    <h4 class="h5 text-primary">Create Your Document</h4>
    <form method="post" formaction="">
        <div class="col-sm-10">
            <div class="form-group">
                <label>Document Orientation</label>
                <select asp-for="Orientation" class="form-control">
                    <option value="0">Select Orientation</option>
                    <option value="Portrait">Portrait</option>
                    <option value="Landscape">Landscape</option>
                </select>
            </div>
            <div class="form-group">
                <textarea asp-for="Message" id="mytextarea" rows="18"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-sm" formaction="https://doc-mgt-system.herokuapp.com/pdf/print/">Preview & Print</button>
            <button type="submit" class="btn btn-success btn-sm" formaction="https://doc-mgt-system.herokuapp.com/pdf/index/">Download</button>
        </div>
    </form>
</div>

