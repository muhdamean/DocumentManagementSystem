@model List<UserRolesViewModel>

@{
    ViewBag.Title = "Manage Roles";
    var userId = ViewBag.userId;
}
<h5 class="text-primary">Manage User Roles</h5>
<div class="col-sm-6">
    <form method="post">
        <div class="card p-3">
            <div class="card-header">
                <h6 class="text-info">Add or Remove Roles</h6>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1:">
                        <input asp-for="@Model[i].RoleId" hidden />
                        <input asp-for="@Model[i].RoleName" hidden />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-sm" style="width:auto">Update</button>
                <a asp-action="editstaff" asp-controller="user" asp-route-id="@userId" class="btn btn-info btn-sm">Cancel</a>
            </div>
        </div>
    </form>
</div>
