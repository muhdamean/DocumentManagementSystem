@model IndexViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">

    <!-- order-card start -->
    <div class="col-md-6 col-xl-3">
        <div class="card bg-c-blue order-card">
            <div class="card-block">
                <h6 class="m-b-20">Documents</h6>
                <h2 class="text-right"><i class="ti-cloud f-left"></i><span>@Model.AllDocCount</span></h2>
                <p class="m-b-0">Total  Documents<span class="f-right">@Model.AllDocCount</span></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card bg-c-green order-card">
            <div class="card-block">
                <h6 class="m-b-20">PDF</h6>
                <h2 class="text-right"><i class="ti-files f-left"></i><span>@Model.PdfCount</span></h2>
                <p class="m-b-0">Docs Type<span class="f-right">.pdf</span></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card bg-c-yellow order-card">
            <div class="card-block">
                <h6 class="m-b-20">Word</h6>
                <h2 class="text-right"><i class="ti-layers f-left"></i><span>@Model.WordCount</span></h2>
                <p class="m-b-0">Docs Type<span class="f-right">.docx,.doc</span></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card bg-c-pink order-card">
            <div class="card-block">
                <h6 class="m-b-20">Excel</h6>
                <h2 class="text-right"><i class="ti-layers-alt f-left"></i><span>@Model.ExlxCount</span></h2>
                <p class="m-b-0">Docs Type<span class="f-right">.exlx,.exl</span></p>
            </div>
        </div>
    </div>
    <!-- order-card end -->
    <!-- statustic and process start -->
    <div class="col-lg-8 col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Statistics</h5>
                <div class="card-header-right">
                    <ul class="list-unstyled card-option">
                        <li><i class="fa fa-chevron-left"></i></li>
                        <li><i class="fa fa-window-maximize full-card"></i></li>
                        <li><i class="fa fa-minus minimize-card"></i></li>
                        <li><i class="fa fa-refresh reload-card"></i></li>
                        <li><i class="fa fa-times close-card"></i></li>
                    </ul>
                </div>
            </div>
            <div class="card-block">
                @if (Model.DocTypeCounts.Any())
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead></thead>
                            <tbody>
                                @foreach (var type in Model.DocTypeCounts)
                                {
                                    <tr>
                                        <td>@type.DocType</td>
                                        <td>@type.Count</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                }
                @*<canvas id="Statistics-chart" height="200"></canvas>*@
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Document Engagement</h5>
            </div>
            <div class="card-block">
                <span class="d-block text-c-blue f-24 f-w-600 text-center">@Model.TotalComments</span>
                <canvas id="feedback-chart" height="100"></canvas>
                <div class="row justify-content-center m-t-15">
                    <div class="col-auto b-r-default m-t-5 m-b-5">
                        <h4>83%</h4>
                        <p class="text-success m-b-0"><i class="ti-hand-point-up m-r-5"></i>Positive</p>
                    </div>
                    <div class="col-auto m-t-5 m-b-5">
                        <h4>17%</h4>
                        <p class="text-danger m-b-0"><i class="ti-hand-point-down m-r-5"></i>Negative</p>
                    </div>
                </div>
            </div>
        </div>
    </div> 
    <!-- statustic and process end -->
    <!-- tabs card start -->
    <div class="col-sm-12">
        <div class="card tabs-card">
            <div class="card-block p-0">
                <!-- Nav tabs -->
                @*<ul class="nav nav-tabs md-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#home3" role="tab"><i class="fa fa-home"></i>Home</a>
                            <div class="slide"></div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#profile3" role="tab"><i class="fa fa-key"></i>Security</a>
                            <div class="slide"></div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#messages3" role="tab"><i class="fa fa-play-circle"></i>Entertainment</a>
                            <div class="slide"></div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#settings3" role="tab"><i class="fa fa-database"></i>Big Data</a>
                            <div class="slide"></div>
                        </li>
                    </ul>*@
                <!-- Tab panes -->
                <div class="tab-content card-block">
                    <div class="tab-pane active" id="home3" role="tabpanel">

                        <div class="table-responsive">
                            @if (Model.GetDepartmentViewModels.Any())
                            {
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Department</th>
                                            <th>IsActive</th>
                                            <th>Created&nbsp;By</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                    @foreach (var dept in Model.GetDepartmentViewModels)
                                    {
                                        <tr>
                                            <td>@dept.Name</td>
                                            <td>@dept.Status</td>
                                            <td>@dept.SubmittedBy</td>
                                            <td>@dept.DateCreated</td>

                                        </tr>
                                    }
                                </table>
                            }


                        </div>
                        <div class="text-center">
                            <button class="btn btn-outline-primary btn-round btn-sm">Load More</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- tabs card end -->
 
    <!-- users visite and profile start -->
    <div class="col-md-4">
        <div class="card user-card">
            <div class="card-header">
                <h5>Profile</h5>
            </div>
            <div class="card-block">
                @if (Model.GetUserViewModels != null)
                {
                    var photoPath = "../../images/";
                    if (!string.IsNullOrWhiteSpace(Model.GetUserViewModels.PhotoPath))
                    {
                        photoPath += Model.GetUserViewModels.PhotoPath;
                    }
                    else
                    {
                        photoPath += "no-image.jpg";
                    }
                    <div class="usre-image">
                        <img src="@photoPath" class="img-radius" height="110" width="110" alt="User-Profile-Image">
                    </div>
                    <h6 class="f-w-600 m-t-25 m-b-10">@Model.GetUserViewModels.Name</h6>
                    <p class="text-muted">Active | @Model.GetUserViewModels.Gender | Born @Model.GetUserViewModels.DOB.ToShortDateString()</p>
                    <hr />
                    <p class="text-muted m-t-15">Activity Level: 87%</p>
                    <ul class="list-unstyled activity-leval">
                        <li class="active"></li>
                        <li class="active"></li>
                        <li class="active"></li>
                        <li></li>
                        <li></li>
                    </ul>
                    <div class="bg-c-blue counter-block m-t-10 p-20">
                        <div class="row">
                            <div class="col-4">
                                <i class="ti-comments"></i>
                                <p>1256</p>
                            </div>
                            <div class="col-4">
                                <i class="ti-user"></i>
                                <p>8562</p>
                            </div>
                            <div class="col-4">
                                <i class="ti-bag"></i>
                                <p>189</p>
                            </div>
                        </div>
                    </div>
                    <p class="m-t-15 text-muted">@Model.GetUserViewModels.Address.</p>
                    <hr />
                    <div class="row justify-content-center user-social-link">
                        <div class="col-auto"><a href="#!"><i class="fa fa-facebook text-facebook"></i></a></div>
                        <div class="col-auto"><a href="#!"><i class="fa fa-twitter text-twitter"></i></a></div>
                        <div class="col-auto"><a href="#!"><i class="fa fa-dribbble text-dribbble"></i></a></div>
                    </div>
                }

            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Activity Feed</h5>
                <div class="card-header-right">
                    <ul class="list-unstyled card-option">
                        <li><i class="fa fa-chevron-left"></i></li>
                        <li><i class="fa fa-window-maximize full-card"></i></li>
                        <li><i class="fa fa-minus minimize-card"></i></li>
                        <li><i class="fa fa-refresh reload-card"></i></li>
                        <li><i class="fa fa-times close-card"></i></li>
                    </ul>
                </div>
            </div>
            @if (Model.GetDocumentViewModels.Any())
            {
                <div class="card-block mt-1">
                    <ul class="feed-blog ">
                        @foreach (var item in Model.GetDocumentViewModels)
                        {
                            var photoPath = "../../images/";
                            if (!string.IsNullOrWhiteSpace(item.UploadedBy))
                            {
                                photoPath += item.Passport;
                            }
                            else
                            {
                                photoPath += "no-image.jpg";
                            }
                            <li class="active-feed pt-1">
                                <div class="feed-user-img">
                                    <img src="@photoPath" class="img-radius" alt="User-Profile-Image">
                                </div>
                                <h6><span class="label label-danger">@item.Type</span> @item.UserName (@item.Email) new files: <small class="text-muted">@item.Date.ToShortDateString()</small></h6>
                                <p class="m-b-15 m-t-15">@item.UploadComment</p>
                                <div class="row">
                                    <div class="col-auto">
                                        <h6>@item.Name</h6>
                                        <p>@item.UploadComment</p>
                                        <br />
                                        
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-header">
                        No document available
                    </div>
                    <div class="card-body">
                        Use the button below to upload document
                    </div>
                    <div class="card-footer">
                        <a asp-action="upload" asp-controller="document" class="btn btn-link btn-sm">Upload Document</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- users visite and profile end -->

</div>
