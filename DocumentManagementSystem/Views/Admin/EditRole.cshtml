@model EditRoleViewModel

@{
    ViewBag.PageTitle = "Edit Role";
}

<div class="row">
    <div class="col-sm-6">
        <h3>Edit Role</h3>
        <form method="post">
            <div class="form-group" hidden>
                <label asp-for="RoleId" class="col-form-label"></label>
                <input asp-for="RoleId" class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
                <label asp-for="RoleName" class="col-form-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="offset-1">
                    <button type="submit" class="btn btn-primary btn-sm mr-2">Update</button>
                    <a asp-action="listroles" class="btn btn-primary btn-sm">Cancel</a>
                </div>
            </div>

            <div class="col-sm-10 ">
                <div class="card mt-2">
                    <div class="card-header">
                        <h5 class="card-title">Users in this role</h5>
                        <hr />
                    </div>
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h4 class="card-title">@user</h4>
                            }
                        }
                        else
                        {
                            <h6>None at the moment</h6>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-action="editusersInrole" asp-route-roleId="@Model.RoleId" class="btn btn-primary btn-sm">Add or Remove Users</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>